apiVersion: apps/v1
kind: Deployment
metadata:
  name: flask-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: flask-app
  template:
    metadata:
      labels:
        app: flask-app
    spec:
      containers:
        - name: flask-app
          image: amihsan/flask-terraform-backend:latest
          ports:
            - containerPort: 5000
          env:
            - name: MONGODB_URI
              value: "{{ MONGODB_URI }}"  # Decrypted from Ansible Vault
            - name: DATABASE_NAME
              value: "{{ DATABASE_NAME }}"  # Decrypted from Ansible Vault
---
apiVersion: v1
kind: Service
metadata:
  name: flask-app
spec:
  type: NodePort
  ports:
    - port: 5000
      targetPort: 5000
      nodePort: 30001  # Exposes Flask on NodePort 30001
  selector:
    app: flask-app
